<% if @article.errors.any? then%>
  <h2> Error al crear el artículo </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Título", class: "form-group" %>
        </div>
        <div class="control-label col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Título", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Descripción", class: "form-group" %>
        </div>
        <div class="control-label col-sm-8">
          <%= f.text_area :description, class: "form-control", placeholder: "Contenido", autofocus: true, rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.submit "Confirmar", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancelar y volver a lista de artículos", articles_path %> ]
    </div
  </div>
</div>