<h1 class="center">Inicio de sesión</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label "E-mail", class: "form-group" %>
    </div>
    <div class="control-label col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label "Contraseña", class: "form-group" %>
    </div>
    <div class="control-label col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: false %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= f.submit("Iniciar sesión", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Cancelar y volver a lista de artículos", articles_path %> ]
</div>